{
	"name": "x3p0-dev/x3p0-ideas",
	"type": "wordpress-theme",
	"license": "GPL-3.0-or-later",
	"scripts": {
		"build": [
			"composer var-reset",
			"composer update --no-dev",
			"composer dump-autoload -o --no-dev"
		],
		"color": "composer config extra.x3p0.color",
		"dev": [
			"composer update",
			"composer dump-autoload"
		],
		"prelude": "X3P0\\Ideas\\Scripts\\Prelude::compose",
		"post-install-cmd": [
			"@prelude"
		],
		"post-update-cmd": [
			"@prelude"
		],
		"lint:php": "./vendor/bin/phpcs -d error_reporting=E_ALL^E_DEPRECATED -s --colors .",
		"theme": "composer config extra.x3p0.theme",
		"type": "composer config extra.x3p0.typography",
		"typography": "composer config extra.x3p0.typography",
		"var": "composer config extra.x3p0.theme",
		"var-reset": [
			"composer config extra.x3p0.color \"\"",
			"composer config extra.x3p0.theme \"\"",
			"composer config extra.x3p0.typography \"\""
		],
		"zip": "composer archive --file=x3p0-ideas"
	},
	"extra": {
		"x3p0": {
			"color": "",
			"theme": "",
			"typography": "",
			"prelude": {
				"vendor-path": "x3p0-dev",
				"output-path": "packages",
				"search-namespace": "X3P0",
				"replace-namespace": "X3P0\\Ideas"
			}
		}
	},
	"autoload": {
		"psr-4": {
			"X3P0\\Ideas\\": "src/",
			"X3P0\\Ideas\\Scripts\\": "scripts/"
		},
		"files" : [
			"src/functions-helpers.php"
		],
		"classmap": [
			"packages/"
		],
		"exclude-from-classmap": [
			"scripts/",
			"vendor/"
		]
	},
	"autoload-dev": {
		"psr-4": {
			"X3P0\\Ideas\\Dev\\": "dev/"
		},
		"files" : [
			"dev/bootstrap.php"
		]
	},
	"require": {
                "php": ">=8.1",
		"x3p0-dev/x3p0-framework": "dev-master"
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "^3.0",
		"phpcompatibility/phpcompatibility-wp": "*",
		"symfony/var-dumper": "^6.4",
		"dealerdirect/phpcodesniffer-composer-installer": "^1.0"
	},
	"minimum-stability": "stable",
	"prefer-stable": true,
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		},
		"archive-dir": "./",
		"archive-format": "zip"
	},
	"archive": {
		"exclude": [
			"/vendor",
			"!/vendor/autoload.php",
			"!/vendor/composer/"
		]
	},
	"authors": [
		{
			"name": "Justin Tadlock",
			"email": "justintadlock@gmail.com"
		}
	]
}
