{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
	"version": 3,
	"title": "Primary",
	"slug": "buttons-primary",
	"blockTypes": [
		"core/post-terms",
		"core/social-links",
		"core/tag-cloud"
	],
	"styles": {
		"css": "gap: var(--wp--preset--spacing--40);",
		"spacing": {
			"blockGap": { "ref": "styles.elements.buttons.spacing.blockGap" }
		},
		"typography": {
			"fontFamily": { "ref": "styles.elements.button.typography.fontFamily" },
			"fontSize": { "ref": "styles.elements.button.typography.fontSize" },
			"fontWeight": { "ref": "styles.elements.button.typography.fontWeight" }
		},
		"elements": {
			"link": {
				"css": "&:is(:hover, :focus) { box-shadow: var(--wp--custom--components--button--primary--hover--shadow); border: var(--wp--custom--components--button--primary--hover--border--width) var(--wp--custom--components--button--primary--hover--border--style) var(--wp--custom--components--button--primary--hover--border--color); border-radius: var(--wp--custom--components--button--primary--hover--border--radius); }",
				"border": {
					"color": { "ref": "styles.elements.button.border.color" },
					"style": { "ref": "styles.elements.button.border.style" },
					"width": { "ref": "styles.elements.button.border.width" },
					"radius": { "ref": "styles.elements.button.border.radius" }
				},
				"color": {
					"background": { "ref": "styles.elements.button.color.background" },
					"text": { "ref": "styles.elements.button.color.text" }
				},
				"outline": {
					"color": { "ref": "styles.elements.button.outline.color" }
				},
				"shadow": { "ref": "styles.elements.button.shadow" },
				"spacing": {
					"padding": {
						"top": { "ref": "styles.elements.button.spacing.padding.top" },
						"bottom": { "ref": "styles.elements.button.spacing.padding.bottom" },
						"left": { "ref": "styles.elements.button.spacing.padding.left" },
						"right": { "ref": "styles.elements.button.spacing.padding.right" }
					}
				},
				"typography": {
					"fontSize": "inherit !important",
					"fontWeight": "inherit !important",
					"lineHeight": { "ref": "styles.elements.button.typography.lineHeight" },
					"textDecoration": "none"
				},
				":focus": {
					"border": {
						"color": "var(--wp--custom--components--button--primary--hover--border--color)",
						"radius": "var(--wp--custom--components--button--primary--hover--border--radius)",
						"style": "var(--wp--custom--components--button--primary--hover--border--style)",
						"width": "var(--wp--custom--components--button--primary--hover--border--width)"
					},
					"color": {
						"background": "var(--wp--custom--components--button--primary--hover--background)",
						"text": "var(--wp--custom--components--button--primary--hover--foreground)"
					},
					"typography": {
						"textDecoration": "underline !important"
					}
				},
				":hover": {
					"border": {
						"color": "var(--wp--custom--components--button--primary--hover--border--color)",
						"radius": "var(--wp--custom--components--button--primary--hover--border--radius)",
						"style": "var(--wp--custom--components--button--primary--hover--border--style)",
						"width": "var(--wp--custom--components--button--primary--hover--border--width)"
					},
					"color": {
						"background": "var(--wp--custom--components--button--primary--hover--background)",
						"text": "var(--wp--custom--components--button--primary--hover--foreground)"
					},
					"typography": {
						"textDecoration": "underline !important"
					}
				}
			}
		},
		"blocks": {
			"core/social-link": {
				"css": "&:is(:hover, :focus) { box-shadow: var(--wp--custom--components--button--primary--hover--shadow); border: var(--wp--custom--components--button--primary--hover--border--width) var(--wp--custom--components--button--primary--hover--border--style) var(--wp--custom--components--button--primary--hover--border--color); border-radius: var(--wp--custom--components--button--primary--hover--border--radius); }",
				"border": {
					"color": { "ref": "styles.elements.button.border.color" },
					"style": { "ref": "styles.elements.button.border.style" },
					"width": { "ref": "styles.elements.button.border.width" },
					"radius": { "ref": "styles.elements.button.border.radius" }
				},
				"color": {
					"background": { "ref": "styles.elements.button.color.background" },
					"text": { "ref": "styles.elements.button.color.text" }
				},
				"shadow": { "ref": "styles.elements.button.shadow" },
				"typography": {
					"lineHeight": { "ref": "styles.elements.button.typography.lineHeight" }
				},
				"elements": {
					"link": {
						"border": {
							"width": "0"
						},
						"shadow": { "ref": "styles.elements.button.shadow" },
						":focus": {
							"typography": {
								"textDecoration": { "ref": "styles.elements.button.:focus.typography.textDecoration" }
							}
						},
						":hover": {
							"typography": {
								"textDecoration": { "ref": "styles.elements.button.:hover.typography.textDecoration" }
							}
						}
					}
				}
			}
		}
	}
}
