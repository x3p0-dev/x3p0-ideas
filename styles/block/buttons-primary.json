{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/wp/6.8/schemas/json/theme.json",
	"version": 3,
	"title": "Primary",
	"slug": "buttons-primary",
	"blockTypes": [
		"core/post-terms",
		"core/social-links",
		"core/tag-cloud"
	],
	"styles": {
		"css": "gap: var(--wp--preset--spacing--40);",
		"spacing": {
			"blockGap": { "ref": "styles.elements.buttons.spacing.blockGap" }
		},
		"typography": {
			"fontFamily": { "ref": "styles.elements.button.typography.fontFamily" },
			"fontSize": { "ref": "styles.elements.button.typography.fontSize" },
			"fontWeight": { "ref": "styles.elements.button.typography.fontWeight" }
		},
		"elements": {
			"link": {
				"border": {
					"color": { "ref": "styles.elements.button.border.color" },
					"style": { "ref": "styles.elements.button.border.style" },
					"width": { "ref": "styles.elements.button.border.width" },
					"radius": { "ref": "styles.elements.button.border.radius" }
				},
				"color": {
					"background": { "ref": "styles.elements.button.color.background" },
					"text": { "ref": "styles.elements.button.color.text" }
				},
				"outline": {
					"color": { "ref": "styles.elements.button.outline.color" },
					"offset": { "ref": "styles.elements.button.outline.offset" },
					"style": { "ref": "styles.elements.button.outline.style" },
					"width": { "ref": "styles.elements.button.outline.width" }
				},
				"shadow": { "ref": "styles.elements.button.shadow" },
				"spacing": {
					"padding": {
						"top": { "ref": "styles.elements.button.spacing.padding.top" },
						"bottom": { "ref": "styles.elements.button.spacing.padding.bottom" },
						"left": { "ref": "styles.elements.button.spacing.padding.left" },
						"right": { "ref": "styles.elements.button.spacing.padding.right" }
					}
				},
				"typography": {
					"fontSize": "inherit !important",
					"fontWeight": "inherit !important",
					"lineHeight": { "ref": "styles.elements.button.typography.lineHeight" },
					"textDecoration": "none"
				},
				":active": {
					"outline": {
						"color": { "ref": "styles.elements.button.:active.outline.color" },
						"offset": { "ref": "styles.elements.button.:active.outline.offset" },
						"style": { "ref": "styles.elements.button.:active.outline.style" },
						"width": { "ref": "styles.elements.button.:active.outline.width" }
					}
				},
				":focus": {
					"border": {
						"color": "var(--wp--custom--elements--button--primary--hover--border--colour)",
						"radius": "var(--wp--custom--elements--button--primary--hover--border--radius)",
						"style": "var(--wp--custom--elements--button--primary--hover--border--style)",
						"width": "var(--wp--custom--elements--button--primary--hover--border--width)"
					},
					"color": {
						"background": "var(--wp--custom--elements--button--primary--hover--colour--background)",
						"text": "var(--wp--custom--elements--button--primary--hover--colour--foreground)"
					},
					"outline": {
						"color": { "ref": "styles.elements.button.:focus.outline.color" },
						"offset": { "ref": "styles.elements.button.:focus.outline.offset" },
						"style": { "ref": "styles.elements.button.:focus.outline.style" },
						"width": { "ref": "styles.elements.button.:focus.outline.width" }
					},
					"shadow": "var(--wp--custom--elements--button--primary--hover--shadow)",
					"typography": {
						"textDecoration": "underline !important"
					}
				},
				":hover": {
					"border": {
						"color": "var(--wp--custom--elements--button--primary--hover--border--colour)",
						"radius": "var(--wp--custom--elements--button--primary--hover--border--radius)",
						"style": "var(--wp--custom--elements--button--primary--hover--border--style)",
						"width": "var(--wp--custom--elements--button--primary--hover--border--width)"
					},
					"color": {
						"background": "var(--wp--custom--elements--button--primary--hover--colour--background)",
						"text": "var(--wp--custom--elements--button--primary--hover--colour--foreground)"
					},
					"shadow": "var(--wp--custom--elements--button--primary--hover--shadow)",
					"typography": {
						"textDecoration": "underline !important"
					}
				}
			}
		},
		"blocks": {
			"core/social-link": {
				"border": {
					"color": { "ref": "styles.elements.button.border.color" },
					"style": { "ref": "styles.elements.button.border.style" },
					"width": { "ref": "styles.elements.button.border.width" },
					"radius": { "ref": "styles.elements.button.border.radius" }
				},
				"color": {
					"background": { "ref": "styles.elements.button.color.background" },
					"text": { "ref": "styles.elements.button.color.text" }
				},
				"shadow": { "ref": "styles.elements.button.shadow" },
				"typography": {
					"lineHeight": { "ref": "styles.elements.button.typography.lineHeight" }
				}
			}
		}
	}
}
