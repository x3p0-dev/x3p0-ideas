{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/wp/6.8/schemas/json/theme.json",
	"version": 3,
	"title": "Normalize",
	"description": "The normalize style resets the text to inherit its typography from its parent.",
	"slug": "text-normalize",
	"blockTypes": [
		"core/heading",
		"core/site-title"
	],
	"styles": {
		"color": {
			"background": "transparent",
			"text": "currentColor"
		},
		"typography": {
			"fontFamily": "inherit",
			"fontSize": "inherit",
			"fontStyle": "inherit",
			"fontWeight": "inherit",
			"letterSpacing": "revert",
			"lineHeight": "inherit",
			"textTransform": "inherit"
		},
		"elements": {
			"link": {
				"typography": {
					"fontFamily": "inherit",
					"fontSize": "inherit",
					"fontStyle": "inherit",
					"fontWeight": "inherit",
					"letterSpacing": "revert",
					"lineHeight": "inherit",
					"textTransform": "inherit"
				}
			}
		}
	}
}
