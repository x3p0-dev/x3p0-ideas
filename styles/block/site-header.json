{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
	"version": 3,
	"title": "Site Header",
	"slug": "site-header",
	"blockTypes": [ "core/template-part" ],
	"styles": {
		"color": {
			"background": "transparent"
		},
		"blocks": {
			"x3p0/breadcrumbs": {
				"color": {
					"background": "var:custom|color|surface|level-1"
				},
				"spacing": {
					"padding":{
						"top": "var:preset|spacing|40",
						"right": "var:preset|spacing|70",
						"bottom": "var:preset|spacing|40",
						"left": "var:preset|spacing|70"
					}
				},
				"typography": {
					"fontSize": "var:preset|font-size|xs",
					"lineHeight": "var:custom|line-height|xs"
				},
				"elements": {
					"link": {
						"typography": {
							"fontWeight": "500",
							"textDecoration": "none"
						},
						":focus": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			}
		}
	}
}
