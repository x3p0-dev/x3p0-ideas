	"version": 3,
	"title": "Headline",
	"description": "A headline is a title or summary that appears above an article to grab the reader's attention and convey the main points of the content.",
	"slug": "text-headline",
	"blockTypes": [
		"core/heading",
		"core/post-title",
		"core/query-title"
	],
	"styles": {
		"typography": {
			"fontSize": { "ref": "styles.elements.h1.typography.fontSize" },
			"fontWeight": { "ref": "styles.elements.h1.typography.fontWeight" },
			"lineHeight": { "ref": "styles.elements.h1.typography.lineHeight" }
		}
	}
}
