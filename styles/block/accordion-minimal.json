
{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/wp/6.8/schemas/json/theme.json",
	"version": 3,
	"title": "Minimal",
	"slug": "accordion-minimal",
	"blockTypes": [
		"core/accordion"
	],
	"styles": {
		"css": "& { contain: paint; } & .wp-block-accordion-item { margin-top: 0; } & > :first-child { border-top: none; }",
		"spacing": {
			"blockGap": "0"
		},
		"blocks": {
			"core/accordion-item": {
				"css": "",
				"border": {
					"radius": "0",
					"bottom": {
						"width": "0"
					},
					"left": {
						"width": "0"
					},
					"right": {
						"width": "0"
					}
				},
				"color": {
					"background": "transparent"
				},
				"shadow": "none"
			},
			"core/accordion-panel": {
				"spacing": {
					"padding": {
						"top": "0",
						"left": "0",
						"right": "0"
					}
				}
			}
		}
	}
}
