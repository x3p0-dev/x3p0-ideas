{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
	"version": 3,
	"title": "Indent",
	"description": "Sets a length of empty space (indentation) at the start of the text.",
	"slug": "text-indent",
	"blockTypes": [
		"core/paragraph"
	],
	"styles": {
		"css": "text-indent: var(--wp--preset--spacing--80);\n\n&.has-drop-cap {\n\ttext-indent: var(--wp--preset--spacing--60);\n}"
	}
}
