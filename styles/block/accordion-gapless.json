
{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/wp/6.8/schemas/json/theme.json",
	"version": 3,
	"title": "Gapless",
	"slug": "accordion-gapless",
	"blockTypes": [
		"core/accordion"
	],
	"styles": {
		"css": "& { contain: paint; } & .wp-block-accordion-item { margin-top: 0; }",
		"border": {
			"radius": {
				"ref": "styles.blocks.core/accordion-item.border.radius"
			},
			"color": {
				"ref": "styles.blocks.core/accordion-item.border.color"
			},
			"style": {
				"ref": "styles.blocks.core/accordion-item.border.style"
			},
			"width": {
				"ref": "styles.blocks.core/accordion-item.border.width"
			}
		},
		"shadow": "var(--wp--custom--shadow--global--default)",
		"spacing": {
			"blockGap": "0"
		},
		"blocks": {
			"core/accordion-item": {
				"css": "&::last-child { border-bottom: none; }",
				"border": {
					"radius": "0",
					"top": {
						"width": "0"
					},
					"left": {
						"width": "0"
					},
					"right": {
						"width": "0"
					}
				},
				"shadow": "none"
			}
		}
	}
}
