{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/wp/6.8/schemas/json/theme.json",
	"version": 3,
	"title": "Annotation",
	"description": "A note or comment added to a text or diagram.",
	"slug": "text-annotation",
	"blockTypes": [
		"core/heading",
		"core/paragraph"
	],
	"styles": {
		"css": "width: fit-content",
		"border": {
			"color": "var(--wp--custom--border--primary--color)",
			"style": "var(--wp--custom--border--primary--style)",
			"width": "var(--wp--custom--border--primary--width)",
			"radius": "var(--wp--custom--border--primary--radius)"
		},
		"color": {
			"background": "var(--wp--custom--color--background--level-1)",
			"text": "var(--wp--custom--color--foreground--default)"
		},
		"spacing": {
			"padding": {
				"top": "var(--wp--preset--spacing--20)",
				"bottom": "var(--wp--preset--spacing--20)",
				"left": "var(--wp--preset--spacing--50)",
				"right": "var(--wp--preset--spacing--50)"
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--secondary)",
			"fontSize": "var(--wp--preset--font-size--xs)",
			"fontWeight": "300",
			"lineHeight": "var(--wp--custom--line-height--xs)"
		}
	}
}
