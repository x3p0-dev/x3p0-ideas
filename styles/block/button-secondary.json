{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
	"version": 3,
	"title": "Secondary",
	"slug": "button-secondary",
	"blockTypes": [ "core/button" ],
	"styles": {
		"css": "&:is(:hover, :focus) { box-shadow: var(--wp--custom--components--button--secondary--hover--shadow); border: var(--wp--custom--components--button--secondary--hover--border--width) var(--wp--custom--components--button--secondary--hover--border--style) var(--wp--custom--components--button--secondary--hover--border--color); border-radius: var(--wp--custom--components--button--secondary--hover--border--radius); }",
		"border": {
			"color": "var(--wp--custom--components--button--secondary--border--color)",
			"radius": "var(--wp--custom--components--button--secondary--border--radius)",
			"style": "var(--wp--custom--components--button--secondary--border--style)",
			"width": "var(--wp--custom--components--button--secondary--border--width)"
		},
		"color": {
			"background": "var(--wp--custom--components--button--secondary--background)",
			"text": "var(--wp--custom--components--button--secondary--foreground)"
		},
		"shadow": "var(--wp--custom--components--button--secondary--shadow)",
		"spacing": {
			"padding": {
				"top": {
					"ref": "styles.elements.button.spacing.padding.top"
				},
				"bottom": {
					"ref": "styles.elements.button.spacing.padding.bottom"
				},
				"left": {
					"ref": "styles.elements.button.spacing.padding.left"
				},
				"right": {
					"ref": "styles.elements.button.spacing.padding.right"
				}
			}
		},
		"elements": {
			"button": {
				":focus": {
					"border": {
						"color": "var(--wp--custom--components--button--secondary--hover--border--color)",
						"radius": "var(--wp--custom--components--button--secondary--hover--border--radius)",
						"style": "var(--wp--custom--components--button--secondary--hover--border--style)",
						"width": "var(--wp--custom--components--button--secondary--hover--border--width)"
					},
					"color": {
						"background": "var(--wp--custom--components--button--secondary--hover--background)",
						"text": "var(--wp--custom--components--button--secondary--hover--foreground)"
					},
					"outline": {
						"color": "currentColor"
					}
				},
				":hover": {
					"border": {
						"color": "var(--wp--custom--components--button--secondary--hover--border--color)",
						"radius": "var(--wp--custom--components--button--secondary--hover--border--radius)",
						"style": "var(--wp--custom--components--button--secondary--hover--border--style)",
						"width": "var(--wp--custom--components--button--secondary--hover--border--width)"
					},
					"color": {
						"background": "var(--wp--custom--components--button--secondary--hover--background)",
						"text": "var(--wp--custom--components--button--secondary--hover--foreground)"
					},
					"outline": {
						"color": "currentColor"
					}
				}
			}
		}
	}
}
