{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
	"version": 3,
	"title": "Outline",
	"slug": "buttons-outline",
	"blockTypes": [
		"core/post-terms",
		"core/social-links",
		"core/tag-cloud"
	],
	"styles": {
		"typography": {
			"fontSize": { "ref": "styles.elements.button.typography.fontSize" },
			"fontWeight": { "ref": "styles.elements.button.typography.fontWeight" }
		},
		"elements": {
			"link": {
				"border": {
					"color": { "ref": "styles.blocks.core/button.variations.outline.border.color" },
					"style": { "ref": "styles.blocks.core/button.variations.outline.border.style" },
					"width": { "ref": "styles.blocks.core/button.variations.outline.border.width" },
					"radius": { "ref": "styles.blocks.core/button.variations.outline.border.radius" }
				},
				"color": {
					"background": { "ref": "styles.blocks.core/button.variations.outline.color.background" },
					"text": { "ref": "styles.blocks.core/button.variations.outline.color.text" }
				},
				"outline": {
					"color": { "ref": "styles.blocks.core/button.variations.outline.outline.color" }
				},
				"shadow": { "ref": "styles.elements.button.shadow" },
				"spacing": {
					"padding": {
						"top": { "ref": "styles.elements.button.spacing.padding.top" },
						"bottom": { "ref": "styles.elements.button.spacing.padding.bottom" },
						"left": { "ref": "styles.elements.button.spacing.padding.left" },
						"right": { "ref": "styles.elements.button.spacing.padding.right" }
					}
				},
				"typography": {
					"fontSize": "inherit !important",
					"fontWeight": "inherit !important",
					"lineHeight": { "ref": "styles.elements.button.typography.lineHeight" },
					"textDecoration": "none"
				},
				":focus": {
					"color": {
						"background": "transparent"
					},
					"shadow": { "ref": "styles.elements.button.:focus.shadow" },
					"typography": {
						"textDecoration": "underline !important"
					}
				},
				":hover": {
					"color": {
						"background": "transparent"
					},
					"shadow": { "ref": "styles.elements.button.:hover.shadow" },
					"typography": {
						"textDecoration": "underline !important"
					}
				}
			}
		},
		"blocks": {
			"core/social-link": {
				"border": {
					"color": { "ref": "styles.blocks.core/button.variations.outline.border.color" },
					"style": { "ref": "styles.blocks.core/button.variations.outline.border.style" },
					"width": { "ref": "styles.blocks.core/button.variations.outline.border.width" },
					"radius": { "ref": "styles.blocks.core/button.variations.outline.border.radius" }
				},
				"color": {
					"background": { "ref": "styles.blocks.core/button.variations.outline.color.background" },
					"text": { "ref": "styles.blocks.core/button.variations.outline.color.text" }
				},
				"elements": {
					"link": {
						"border": {
							"width": "0"
						},
						"shadow": { "ref": "styles.elements.button.shadow" },
						":focus": {
							"shadow": { "ref": "styles.elements.button.:focus.shadow" },
							"typography": {
								"textDecoration": { "ref": "styles.elements.button.:focus.typography.textDecoration" }
							}
						},
						":hover": {
							"shadow": { "ref": "styles.elements.button.:hover.shadow" },
							"typography": {
								"textDecoration": { "ref": "styles.elements.button.:hover.typography.textDecoration" }
							}
						}
					}
				}
			}
		}
	}
}
