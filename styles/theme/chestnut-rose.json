		"custom": {
			"variation": "chestnut-rose",
			"global": {
				"border": {
					"width": "0",
					"radius": "8px"
				},
				"shadow": "var:preset|shadow|lg",
				"fill": {
					"hoverBackground": "var:preset|color|primary-500"
				},
				"outline": {
					"borderWidth": "1px"
				}
			},
			"elements": {
				"label": {
					"fontSize": "var:preset|font-size|xs"
				}
			},
			"embed": {
				"fontFamily": "'JetBrains Mono', monospace"
			}
		},
		"layout": {
			"contentSize": "39rem",
			"wideSize": "68rem"
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Plus Jakarta Sans', Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif",
					"slug": "primary",
					"name": "Primary (Plus Jakarta Sans)",
					"fontFace": [
						{
							"fontFamily": "Plus Jakarta Sans",
							"fontWeight": "200 800",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/plus-jakarta-sans/plus-jakarta-sans.woff2"
							]
						},
						{
							"fontFamily": "Plus Jakarta Sans",
							"fontWeight": "200 800",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/plus-jakarta-sans/plus-jakarta-sans-italic.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "'JetBrains Mono', ui-monospace, 'Fira Code', 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace",
					"slug": "secondary",
					"name": "Secondary (JetBrains Mono)",
					"fontFace": [
						{
							"fontFamily": "JetBrains Mono",
							"fontWeight": "100 800",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/jetbrains-mono/jetbrains-mono.woff2"
							]
						},
						{
							"fontFamily": "JetBrains Mono",
							"fontWeight": "100 800",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/jetbrains-mono/jetbrains-mono-italic.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "'JetBrains Mono', ui-monospace, 'Fira Code', 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace",
					"slug": "mono",
					"name": "Monospace"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontSize": "var:preset|font-size|sm",
			"lineHeight": "var:custom|line-height|sm"
		},
		"elements": {
			"button": {
				"typography": {
					"fontWeight": "300",
					"fontSize": "var:preset|font-size|xs",
					"lineHeight": "var:custom|line-height|xs"
				},
				"shadow": "var:preset|shadow|md"
			},
			"caption": {
				"typography": {
					"fontStyle": "italic",
					"fontWeight": "300",
					"fontSize": "var:preset|font-size|xs",
					"lineHeight": "var:custom|line-height|xs"
				}
			},
			"heading": {
				"color": {
					"text": "var:preset|color|neutral-700"
				},
				"typography": {
					"fontWeight": "200",
					"letterSpacing": "-0.02em"
				}
			}
		},
		"blocks": {
			"core/comment-reply-link": {
				"typography": {
					"fontSize":"var:preset|font-size|xs",
					"lineHeight":"var:custom|line-height|xs"
				}
			},
			"core/gallery": {
				"typography": {
					"fontStyle": "italic",
					"fontSize": "var:preset|font-size|xs",
					"lineHeight": "var:custom|line-height|xs"
				}
			},
			"core/navigation-submenu": {
				"border": {
					"width": "1px",
					"style": "solid",
					"color": "var:preset|color|neutral-50",
					"radius": "var:custom|global|border|radius"
				},
				"color": {
					"text": "var:preset|color|contrast",
					"background": "var:preset|color|neutral-50"
				},
				"shadow": "var:preset|shadow|lg",
				"typography": {
					"fontSize": "var:preset|font-size|xs"
				},
				"elements": {
					"link": {
						":focus": {
							"color": {
								"text": "var:preset|color|primary-700"
							}
						},
						":hover": {
							"color": {
								"text": "var:preset|color|primary-700"
							}
						}
					}
				},
				"css": "& .wp-block-navigation-item:hover, .wp-block-navigation-item:focus {\n\tcolor: var(--wp--preset--color--700);\n\tbackground: var(--wp--preset--color--neutral-100);\n}"
			},
			"core/post-terms": {
				"variations": {
					"fill": {
						"typography": {
							"fontWeight": "300"
						},
						"elements": {
							"link": {
								":focus": {
									"color": {
										"background": "var:preset|color|primary-500"
									}
								},
								":hover": {
									"color": {
										"background": "var:preset|color|primary-500"
									}
								}
							}
						}
					}
				}
			},
			"core/separator": {
				"color": {
					"text": "var:preset|color|primary-500"
				}
			},
			"core/social-link": {
				"shadow": "var:preset|shadow|md"
			},
			"core/site-title": {
				"typography": {
					"fontStyle": "italic",
					"fontFamily": "var:preset|font-size|secondary",
					"textTransform": "initial"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var:preset|font-size|xs",
					"lineHeight": "var:custom|line-height|xs"
				}
			},
			"core/pullquote": {
				"typography": {
					"fontStyle": "italic"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontStyle": "normal",
							"fontWeight": "300"
						}
					}
				}
			},
			"core/quote": {
				"typography": {
					"fontStyle": "italic"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontStyle": "normal",
							"fontWeight": "300",
							"fontSize": "var:preset|font-size|xs",
							"lineHeight": "var:custom|line-height|xs"
						}
					}
				}
			},
			"core/social-links": {
				"typography": {
					"textTransform": "initial"
				}
			},
			"core/table": {
				"typography": {
					"fontWeight": "300",
					"fontSize": "var:preset|font-size|xs",
					"lineHeight": "var:custom|line-height|xs"
				}
			},
			"core/tag-cloud": {
				"typography": {
					"fontSize": "var:preset|font-size|xs"
				}
			},
			"core/verse": {
				"typography": {
					"fontFamily": "var:preset|font-family|secondary",
					"fontStyle": "italic",
					"fontWeight": "300"
				}
			},
			"x3p0/breadcrumbs": {
				"color": {
					"gradient": "var:preset|gradient|90-deg-neutral-50-transparent"
				},
				"typography": {
					"fontFamily": "var:preset|font-family|secondary",
					"fontStyle": "italic",
					"fontWeight": "300",
					"fontSize": "var:preset|font-size|xs",
					"lineHeight": "var:custom|line-height|xs"
				}
			}
		},
		"variations": {
			"meta": {
				"typography": {
					"fontSize": "var:preset|font-size|xs",
					"lineHeight": "var:custom|line-height|xs"
				}
			}
		}
	}
}
