		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "Playfair, Didot, 'Bodoni MT', 'Noto Serif Display', 'URW Palladio L', P052, Sylfaen, serif",
					"slug": "primary",
					"name": "Primary (Playfair)",
					"fontFace": [
						{
							"fontFamily": "Playfair",
							"fontWeight": "200 700",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./public/fonts/playfair/playfair.woff2" ]
						},
						{
							"fontFamily": "Playfair",
							"fontWeight": "200 700",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./public/fonts/playfair/playfair-italic.woff2" ]
						}
					]
				},
				{
					"fontFamily": "Charter, 'Bitstream Charter', 'Sitka Text', Cambria, Georgia, serif",
					"slug": "secondary",
					"name": "Secondary (Charter)"
				},
				{
					"fontFamily": "'Dancing Script', cursive",
					"slug": "tertiary",
					"name": "Tertiary (Dancing Script)",
					"fontFace": [
						{
							"fontFamily": "Dancing Script",
							"fontWeight": "400 700",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./public/fonts/dancing-script/dancing-script.woff2" ]
						}
					]
				},
				{
					"fontFamily": "ui-monospace, 'Fira Code', 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace",
					"slug": "mono",
					"name": "Monospace"
				}
			]
		}
	},
	"styles": {
		"color": {
			"gradient": "linear-gradient( 225deg, #cdb8a425, transparent 25% ), linear-gradient( 45deg, #cdb8a425, transparent 25% )"
		},
		"elements": {
			"caption": {
				"typography": {
					"fontFamily": "var:preset|font-family|tertiary",
					"fontSize": "var:preset|font-size|md",
					"lineHeight": "var:custom|line-height|md"
				}
			}
		},
		"blocks": {
			"core/avatar": {
				"border": {
					"width": "3px",
					"color": "var:preset|color|primary-500",
					"style": "solid"
				}
			},
			"core/calendar": {
				"typography": {
					"fontFamily": "var:preset|font-family|tertiary"
				}
			},
			"core/comments-title": {
				"typography": {
					"fontSize": "var:preset|font-size|2-xl",
					"lineHeight": "var:preset|line-height|2-xl"
				}
			},
			"core/post-comments-form": {
				"color": {
					"background": "var:preset|color|neutral-50"
				},
				"border": {
					"color": "var:custom|global|border|color",
					"style": "var:custom|global|border|style",
					"width": "var:custom|global|border|width",
					"radius": "var:custom|global|border|radius"
				},
				"elements": {
					"h3": {
						"border": {
							"bottom": {
								"color": "var:custom|global|border|color",
								"style": "var:custom|global|border|style",
								"width": "var:custom|global|border|width"
							}
						},
						"spacing": {
							"padding": {
								"top": "var:preset|spacing|base",
								"bottom": "var:preset|spacing|base",
								"left": "var:preset|spacing|plus-3",
								"right": "var:preset|spacing|plus-3"
							}
						},
						"typography": {
							"fontSize": "var:preset|font-size|lg",
							"lineHeight": "var:custom|line-height|lg"
						}
					}
				},
				"css": "& > form {\n\tmargin: 0;\n\tpadding: var(--wp--preset--spacing--plus-3);\n}"
			},
			"core/pullquote": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary",
					"fontStyle": "italic"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontFamily": "var:preset|font-family|tertiary",
							"fontSize": "var:preset|font-size|lg",
							"lineHeight": "var:custom|font-size|lg"
						}
					}
				}
			},
			"core/query-pagination": {
				"typography": {
					"fontFamily": "var:preset|font-family|tertiary",
					"fontSize": "var:preset|font-size|md",
					"lineHeight": "var:custom|line-height|md"
				}
			},
			"core/quote": {
				"typography": {
					"fontStyle": "italic"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontFamily": "var:preset|font-family|tertiary",
							"fontSize": "var:preset|font-size|lg",
							"lineHeight": "var:custom|font-size|lg"
						}
					}
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var:preset|font-size|lg",
					"fontStyle": "italic",
					"fontWeight": "900",
					"textTransform": "none"
				}
			},
			"core/verse": {
				"typography": {
					"fontStyle": "italic"
				}
			},
			"x3p0/breadcrumbs": {
				"typography": {
					"fontFamily": "var:preset|font-family|tertiary",
					"fontSize": "var:preset|font-size|md",
					"lineHeight": "var:custom|line-height|md"
				}
			}
		},
		"variations": {
			"site-footer": {
				"color": {
					"background": "transparent"
				},
				"border": {
					"top": {
						"color": "var:custom|global|border|color",
						"style": "var:custom|global|border|style",
						"width": "var:custom|global|border|width"
					}
				}
			}
		}
	}
}
