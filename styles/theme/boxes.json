{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Boxes",
	"settings": {
		"custom": {
			"variation": "boxes",
			"border": {
				"primary": {
					"radius": "0"
				}
			},
			"siteContent": {
				"colour": {
					"background": "var(--wp--custom--colour--background--level-0)",
					"gradient": "none",
					"foreground": "var(--wp--custom--colour--foreground--primary)"
				}
			},
			"siteFooter": {
				"colour": {
					"background": "transparent",
					"foreground": "var(--wp--custom--colour--foreground--primary)"
				}
			},
			"siteHeader": {
				"colour": {
					"background": "var(--wp--custom--colour--background--level-0)",
					"foreground": "var(--wp--custom--colour--foreground--primary)"
				}
			}
		}
	},
	"styles": {
		"variations": {
			"site-container": {
				"css": "& > * { margin-top: var(--wp--style--block-gap); } & > :first-child { margin-top: 0; }",
				"spacing": {
					"margin": {
						"top": "var(--wp--preset--spacing--70) !important",
						"bottom": "var(--wp--preset--spacing--70) !important",
						"left": "var(--wp--preset--spacing--70)",
						"right": "var(--wp--preset--spacing--70)"
					}
				}
			},
			"site-content": {
				"border": {
					"color": "var(--wp--custom--border--primary--colour)",
					"style": "var(--wp--custom--border--primary--style)",
					"width": "var(--wp--custom--border--primary--width)",
					"radius": "var(--wp--custom--border--primary--radius)"
				},
				"shadow": "var(--wp--custom--shadow--primary--default)"
			},
			"site-footer": {
				"border": {
					"color": "var(--wp--custom--border--primary--colour)",
					"style": "var(--wp--custom--border--primary--style)",
					"width": "var(--wp--custom--border--primary--width)",
					"radius": "var(--wp--custom--border--primary--radius)"
				},
				"shadow": "var(--wp--custom--shadow--primary--default)"
			},
			"site-header": {
				"border": {
					"color": "var(--wp--custom--border--primary--colour)",
					"style": "var(--wp--custom--border--primary--style)",
					"width": "var(--wp--custom--border--primary--width)",
					"radius": "var(--wp--custom--border--primary--radius)"
				},
				"shadow": "var(--wp--custom--shadow--primary--default)"
			}
		}
	}
}
