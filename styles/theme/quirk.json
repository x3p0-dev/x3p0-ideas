{
	"$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/wp/6.8/schemas/json/theme.json",
	"version": 3,
	"title": "Quirk",
	"settings": {
		"custom": {
			"variation": "quirk",
			"border": {
				"global": {
					"radius": "0"
				}
			}
		}
	},
	"styles": {
		"css": "@layer variation { body { background: var(--wp--preset--gradient--fabled); } body, .is-style-site-header { border-top-color: var(--wp--custom--color--border--accent-1); } body, .is-style-site-footer { border-bottom-color: var(--wp--custom--color--border--accent-2); } }",
		"border": {
			"top": {
				"color": "var(--wp--custom--color--border--accent-1)",
				"width": "5px",
				"style": "solid"
			},
			"bottom": {
				"color": "var(--wp--custom--color--border--accent-2)",
				"width": "5px",
				"style": "solid"
			}
		},
		"color": {
			"gradient": "var(--wp--preset--gradient--fabled)",
			"text": "var(--wp--preset--color--white)"
		},
		"variations": {
			"site-container": {
				"css": "contain: paint; max-width: 60rem; width: 100%; & > * { margin-top: 0; }",
				"border": {
					"radius": "var(--wp--custom--border--global--radius)"
				},
				"shadow": "var(--wp--custom--shadow--primary--default)",
				"spacing": {
					"margin": {
						"top": "clamp(0rem, calc(0.283 * (100cqi - 60rem)), 5.66rem) !important",
						"bottom": "clamp(0rem, calc(0.283 * (100cqi - 60rem)), 5.66rem) !important",
						"left": "auto",
						"right": "auto"
					}
				}
			},
			"site-footer": {
				"border": {
					"bottom": {
						"color": "var(--wp--custom--color--border--accent-2)",
						"width": "var(--wp--preset--spacing--10)",
						"style": "solid"
					}
				}
			},
			"site-header": {
				"border": {
					"top": {
						"color": "var(--wp--custom--color--border--accent-1)",
						"width": "var(--wp--preset--spacing--10)",
						"style": "solid"
					}
				}
			}
		}
	}
}
