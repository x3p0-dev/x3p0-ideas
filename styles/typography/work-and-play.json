{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Work and Play",
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Playfair Display', Didot, 'Bodoni MT', 'Noto Serif Display', 'URW Palladio L', P052, Sylfaen, serif",
					"slug": "primary",
					"name": "Primary (Playfair Display)",
					"fontFace": [
						{
							"fontFamily": "Playfair Display",
							"fontWeight": "400 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./public/fonts/playfair/playfair-display.woff2" ]
						},
						{
							"fontFamily": "Playfair Display",
							"fontWeight": "400 900",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./public/fonts/playfair/playfair-display-italic.woff2" ]
						}
					]
				},
				{
					"fontFamily": "Work Sans, ui-sans-serif, sans-serif",
					"slug": "secondary",
					"name": "Secondary (Work Sans)",
					"fontFace": [
						{
							"fontFamily": "Work Sans",
							"fontWeight": "100 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/work-sans/work-sans.woff2"
							]
						},
						{
							"fontFamily": "Work Sans",
							"fontWeight": "100 900",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/work-sans/work-sans-italic.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "ui-monospace, 'Fira Code', 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace",
					"slug": "mono",
					"name": "Monospace"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)"
				}
			},
			"caption": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontSize": "var(--wp--preset--font-size--sm)",
					"fontStyle": "italic",
					"textTransform": "none"
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "700",
					"textTransform": "none"
				}
			},
			"h1": {
				"typography": {
					"fontWeight": "900"
				}
			}
		},
		"blocks": {
			"core/comments-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xl)",
					"lineHeight": "var(--wp--preset--line-height--xl)"
				}
			},
			"core/gallery": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontSize": "var(--wp--preset--font-size--sm)",
					"fontStyle": "italic",
					"textTransform": "none"
				}
			},
			"core/image": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontSize": "var(--wp--preset--font-size--sm)",
					"fontStyle": "italic",
					"textTransform": "none"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontSize": "var(--wp--preset--font-size--sm)"
				}
			},
			"core/post-comments-form": {
				"elements": {
					"h3": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--xl)",
							"lineHeight": "var(--wp--preset--line-height--xl)"
						}
					}
				}
			},
			"core/pullquote": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontStyle": "italic"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontFamily": "var(--wp--preset--font-family--secondary)",
							"fontStyle": "normal",
							"fontWeight": "300"
						}
					}
				}
			},
			"core/query-pagination": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontSize": "var(--wp--preset--font-size--sm)",
					"fontWeight": "500",
					"lineHeight": "var(--wp--custom--line-height--sm)"
				}
			},
			"core/quote": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontFamily": "var(--wp--preset--font-family--primary)",
							"fontSize": "1em",
							"fontStyle": "italic"
						}
					}
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontSize": "var(--wp--preset--font-size--lg)",
					"fontStyle": "italic",
					"fontWeight": "800",
					"letterSpacing": "0",
					"textTransform": "none"
				}
			},
			"core/verse": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontStyle": "italic"
				}
			},
			"x3p0/breadcrumbs": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontSize": "var(--wp--preset--font-size--xs)",
					"lineHeight": "var(--wp--custom--line-height--xs)"
				}
			}
		}
	}
}
