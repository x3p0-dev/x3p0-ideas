{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Slab & Flex Harmony",
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Roboto Slab', Rockwell, 'Rockwell Nova', 'Roboto Slab', 'DejaVu Serif', 'Sitka Small', serif",
					"slug": "primary",
					"name": "Primary (Roboto Slab)",
					"fontFace": [
						{
							"fontFamily": "Roboto Slab",
							"fontWeight": "100 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/roboto/roboto-slab.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "'Roboto Flex', ui-sans-serif, sans-serif",
					"slug": "secondary",
					"name": "Secondary (Roboto Flex)",
					"fontFace": [
						{
							"fontFamily": "Roboto Flex",
							"fontWeight": "100 1000",
							"fontStyle": "normal",
							"fontStretch": "25% 151%",
							"src": [
								"file:./public/fonts/roboto/roboto-flex.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "ui-monospace, 'Fira Code', 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace",
					"slug": "mono",
					"name": "Monospace"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"button": {
				"typography": {
					"fontWeight": "400"
				}
			},
			"caption": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontStyle": "normal"
				}
			},
			"cite": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontStyle": "normal"
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "800"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--3-xl)",
					"lineHeight": "var(--wp--custom--line-height--3-xl)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--2-xl)",
					"lineHeight": "var(--wp--custom--line-height--2-xl)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xl)",
					"lineHeight": "var(--wp--custom--line-height--xl)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--lg)",
					"lineHeight": "var(--wp--custom--line-height--lg)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--md)",
					"lineHeight": "var(--wp--custom--line-height--md)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--sm)",
					"lineHeight": "var(--wp--custom--line-height--sm)"
				}
			}
		},
		"blocks": {
			"core/comments-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--lg)",
					"lineHeight": "var(--wp--custom--line-height--lg)"
				}
			},
			"core/navigation-submenu": {
				"typography": {
					"fontSize": "inherit"
				}
			},
			"core/post-comments-form": {
				"elements": {
					"h3": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--lg)",
							"lineHeight": "var(--wp--custom--line-height--lg)"
						}
					}
				}
			},
			"core/pullquote": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)"
				}
			},
			"core/query-pagination": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--sm)",
					"lineHeight": "var(--wp--custom--line-height--sm)",
					"fontWeight": "500"
				}
			},
			"core/quote": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontSize": "var(--wp--preset--font-size--md)",
					"fontStyle": "normal",
					"fontWeight": "800",
					"letterSpacing": "0",
					"textTransform": "none"
				}
			}
		},
		"variations": {
			"site-header": {
				"blocks": {
					"x3p0/breadcrumbs": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--xs)",
							"lineHeight": "var(--wp--custom--line-height--xs)"
						}
					}
				}
			}
		}
	}
}
