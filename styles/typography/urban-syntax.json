{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Urban Syntax",
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Plus Jakarta Sans', Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif",
					"slug": "primary",
					"name": "Primary (Plus Jakarta Sans)",
					"fontFace": [
						{
							"fontFamily": "Plus Jakarta Sans",
							"fontWeight": "200 800",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/plus-jakarta-sans/plus-jakarta-sans.woff2"
							]
						},
						{
							"fontFamily": "Plus Jakarta Sans",
							"fontWeight": "200 800",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/plus-jakarta-sans/plus-jakarta-sans-italic.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "'JetBrains Mono', ui-monospace, 'Fira Code', 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace",
					"slug": "secondary",
					"name": "Secondary (JetBrains Mono)",
					"fontFace": [
						{
							"fontFamily": "JetBrains Mono",
							"fontWeight": "100 800",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/jetbrains-mono/jetbrains-mono.woff2"
							]
						},
						{
							"fontFamily": "JetBrains Mono",
							"fontWeight": "100 800",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/jetbrains-mono/jetbrains-mono-italic.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "'JetBrains Mono', ui-monospace, 'Fira Code', 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace",
					"slug": "mono",
					"name": "Monospace"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontSize": "var(--wp--preset--font-size--sm)",
			"lineHeight": "var(--wp--custom--line-height--sm)"
		},
		"elements": {
			"button": {
				"typography": {
					"fontWeight": "300",
					"fontSize": "var(--wp--preset--font-size--xs)",
					"lineHeight": "var(--wp--custom--line-height--xs)"
				}
			},
			"caption": {
				"typography": {
					"fontStyle": "italic",
					"fontWeight": "300",
					"fontSize": "var(--wp--preset--font-size--xs)",
					"lineHeight": "var(--wp--custom--line-height--xs)"
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "200",
					"letterSpacing": "-0.02em"
				}
			}
		},
		"blocks": {
			"core/comment-reply-link": {
				"typography": {
					"fontSize":"var(--wp--preset--font-size--xs)",
					"lineHeight":"var(--wp--custom--line-height--xs)"
				}
			},
			"core/gallery": {
				"typography": {
					"fontStyle": "italic",
					"fontSize": "var(--wp--preset--font-size--xs)",
					"lineHeight": "var(--wp--custom--line-height--xs)"
				}
			},
			"core/navigation-submenu": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xs)"
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontSize": "var(--wp--preset--font-size--md)",
					"fontStyle": "italic",
					"fontWeight": "400",
					"letterSpacing": "0",
					"textTransform": "initial"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xs)",
					"lineHeight": "var(--wp--custom--line-height--xs)"
				}
			},
			"core/pullquote": {
				"typography": {
					"fontStyle": "italic"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontStyle": "normal",
							"fontWeight": "300"
						}
					}
				}
			},
			"core/quote": {
				"typography": {
					"fontStyle": "italic"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontStyle": "normal",
							"fontWeight": "300",
							"fontSize": "var(--wp--preset--font-size--xs)",
							"lineHeight": "var(--wp--custom--line-height--xs)"
						}
					}
				}
			},
			"core/social-links": {
				"typography": {
					"textTransform": "initial"
				}
			},
			"core/table": {
				"typography": {
					"fontWeight": "300",
					"fontSize": "var(--wp--preset--font-size--xs)",
					"lineHeight": "var(--wp--custom--line-height--xs)"
				}
			},
			"core/tag-cloud": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xs)"
				}
			},
			"core/verse": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontStyle": "italic",
					"fontWeight": "300"
				}
			}
		},
		"variations": {
			"buttons-primary": {
				"typography": {
					"fontWeight": "300"
				}
			},
			"meta": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xs)",
					"lineHeight": "var(--wp--custom--line-height--xs)"
				}
			},
			"site-header": {
				"blocks": {
					"x3p0/breadcrumbs": {
						"typography": {
							"fontFamily": "var(--wp--preset--font-family--secondary)",
							"fontStyle": "italic",
							"fontWeight": "300",
							"fontSize": "var(--wp--preset--font-size--xs)",
							"lineHeight": "var(--wp--custom--line-height--xs)"
						}
					}
				}
			}
		}
	}
}
