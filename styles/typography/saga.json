{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Saga",
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Playfair Display', Didot, 'Bodoni MT', 'Noto Serif Display', 'URW Palladio L', P052, Sylfaen, serif",
					"slug": "primary",
					"name": "Primary (Playfair Display)",
					"fontFace": [
						{
							"fontFamily": "Playfair Display",
							"fontWeight": "400 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./public/fonts/playfair/playfair-display.woff2" ]
						},
						{
							"fontFamily": "Playfair Display",
							"fontWeight": "400 900",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./public/fonts/playfair/playfair-display-italic.woff2" ]
						}
					]
				},
				{
					"fontFamily": "'Source Sans', ui-sans-serif, sans-serif",
					"slug": "secondary",
					"name": "Secondary (Source Sans)",
					"fontFace": [
						{
							"fontFamily": "Source Sans",
							"fontWeight": "200 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/source/source-sans.woff2"
							]
						},
						{
							"fontFamily": "Source Sans",
							"fontWeight": "200 900",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/source/source-sans-italic.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "ui-monospace, 'Fira Code', 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace",
					"slug": "mono",
					"name": "Monospace"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"heading": {
				"typography": {
					"fontWeight": "700"
				}
			},
			"h1": {
				"typography": {
					"fontWeight": "900"
				}
			}
		},
		"blocks": {
			"core/comments-title": {
				"typography": {
					"fontSize": "var:preset|font-size|xl",
					"lineHeight": "var:preset|line-height|xl"
				}
			},
			"core/post-comments-form": {
				"elements": {
					"h3": {
						"typography": {
							"fontSize": "var:preset|font-size|lg",
							"lineHeight": "var:preset|line-height|lg"
						}
					}
				}
			},
			"core/pullquote": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary",
					"fontStyle": "italic"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontFamily": "var:preset|font-family|secondary",
							"fontStyle": "normal",
							"fontWeight": "300"
						}
					}
				}
			},
			"core/query-pagination": {
				"typography": {
					"fontSize": "var:preset|font-size|md",
					"fontWeight": "500",
					"lineHeight": "var:custom|line-height|md"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":focus": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/quote": {
				"elements": {
					"cite": {
						"typography": {
							"fontFamily": "var:preset|font-family|primary",
							"fontStyle": "italic"
						}
					}
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary",
					"fontSize": "var:preset|font-size|md",
					"fontWeight": "700",
					"fontStyle": "italic",
					"letterSpacing": "-0.03em",
					"textTransform": "none"
				}
			},
			"core/verse": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary",
					"fontStyle": "italic"
				}
			}
		},
		"variations": {
			"meta": {
				"blocks": {
					"core/post-author-name": {
						"elements": {
							"link": {
								"typography": {
									"fontFamily": "var:preset|font-family|primary",
									"fontStyle": "italic",
									"textDecoration": "none"
								},
								":focus": {
									"typography": {
										"textDecoration": "underline"
									}
								},
								":hover": {
									"typography": {
										"textDecoration": "underline"
									}
								}
							}
						}
					}
				}
			}
		}
	}
}
