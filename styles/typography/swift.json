{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Swift",
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "Quicksand, ui-sans-serif, sans-serif",
					"slug": "primary",
					"name": "Primary (Quicksand)",
					"fontFace": [
						{
							"fontFamily": "Quicksand",
							"fontWeight": "300 700",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/quicksand/quicksand.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "Rubik, ui-sans-serif, sans-serif",
					"slug": "secondary",
					"name": "Secondary (Rubik)",
					"fontFace": [
						{
							"fontFamily": "Rubik",
							"fontWeight": "300 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/rubik/rubik.woff2"
							]
						},
						{
							"fontFamily": "Rubik",
							"fontWeight": "300 900",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/rubik/rubik-italic.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "ui-monospace, 'Fira Code', 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace",
					"slug": "mono",
					"name": "Monospace"
				}
			]
		}
	},
	"styles": {
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)"
				}
			},
			"caption": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontSize": "var(--wp--preset--font-size--sm)",
					"fontStyle": "normal",
					"fontWeight": "300",
					"textTransform": "none"
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "300",
					"textTransform": "none"
				}
			},
			"h1": {
				"typography": {
					"fontWeight": "300"
				}
			}
		},
		"blocks": {
			"core/gallery": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontSize": "var(--wp--preset--font-size--sm)",
					"fontStyle": "normal",
					"textTransform": "none"
				}
			},
			"core/image": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontSize": "var(--wp--preset--font-size--sm)",
					"fontStyle": "normal",
					"textTransform": "none"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontSize": "var(--wp--preset--font-size--sm)",
					"fontWeight": "400"
				}
			},
			"core/pullquote": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontStyle": "normal",
					"fontWeight": "500"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontFamily": "var(--wp--preset--font-family--primary)",
							"fontStyle": "normal",
							"fontWeight": "300"
						}
					}
				}
			},
			"core/query-pagination": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontSize": "var(--wp--preset--font-size--sm)",
					"fontWeight": "600",
					"lineHeight": "var(--wp--custom--line-height--sm)"
				}
			},
			"core/quote": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontStyle": "italic"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontFamily": "var(--wp--preset--font-family--primary)",
							"fontSize": "0.875em",
							"fontStyle": "normal"
						}
					}
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontSize": "var(--wp--preset--font-size--md)",
					"fontStyle": "normal",
					"fontWeight": "500",
					"letterSpacing": "0",
					"textTransform": "none"
				}
			},
			"core/verse": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--primary)",
					"fontSize": "var(--wp--preset--font-size--md)",
					"fontStyle": "italic",
					"fontWeight": "400",
					"lineHeight": "var(--wp--custom--line-height--md)"
				}
			},
			"x3p0/breadcrumbs": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--secondary)",
					"fontSize": "var(--wp--preset--font-size--xs)",
					"lineHeight": "var(--wp--custom--line-height--xs)"
				}
			}
		}
	}
}
