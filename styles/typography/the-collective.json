{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "The Collective",
	"settings": {
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "Jost, ui-sans-serif, sans-serif",
					"slug": "primary",
					"name": "Primary (Jost)",
					"fontFace": [
						{
							"fontFamily": "Jost",
							"fontFeatureSettings": "'tnum', 'ss01' 1",
							"fontWeight": "100 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"fontVariant": "slashed-zero",
							"src": [
								"file:./public/fonts/jost/jost.woff2"
							]
						},
						{
							"fontFamily": "Jost",
							"fontFeatureSettings": "'tnum', 'ss01' 1",
							"fontWeight": "100 900",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"fontVariant": "slashed-zero",
							"src": [
								"file:./public/fonts/jost/jost-italic.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "Work Sans, ui-sans-serif, sans-serif",
					"slug": "secondary",
					"name": "Secondary (Work Sans)",
					"fontFace": [
						{
							"fontFamily": "Work Sans",
							"fontWeight": "100 900",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/work-sans/work-sans.woff2"
							]
						},
						{
							"fontFamily": "Work Sans",
							"fontWeight": "100 900",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [
								"file:./public/fonts/work-sans/work-sans-italic.woff2"
							]
						}
					]
				},
				{
					"fontFamily": "ui-monospace, 'Fira Code', 'Cascadia Code', 'Source Code Pro', Menlo, Consolas, 'DejaVu Sans Mono', monospace",
					"slug": "mono",
					"name": "Monospace"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontWeight": "425"
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary"
				}
			},
			"caption": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary"
				}
			},
			"heading": {
				"typography": {
					"fontWeight": "800"
				}
			}
		},
		"blocks": {
			"core/comments-title": {
				"typography": {
					"fontSize": "var:preset|font-size|xl",
					"lineHeight": "var:preset|line-height|xl"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary"
				}
			},
			"core/post-comments-form": {
				"elements": {
					"h3": {
						"typography": {
							"fontSize": "var:preset|font-size|lg",
							"lineHeight": "var:custom|line-height|lg"
						}
					}
				}
			},
			"core/pullquote": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary",
					"fontWeight": "700"
				},
				"elements": {
					"cite": {
						"typography": {
							"fontStyle": "normal"
						}
					}
				}
			},
			"core/query-pagination": {
				"typography": {
					"fontFamily": "var:preset|font-family|primary",
					"fontSize": "var:preset|font-size|sm",
					"fontWeight": "500",
					"lineHeight": "var:custom|line-height|sm"
				},
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						},
						":focus": {
							"typography": {
								"textDecoration": "underline"
							}
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/quote": {
				"elements": {
					"cite": {
						"typography": {
							"fontStyle": "normal"
						}
					}
				}
			},
			"core/site-title": {
				"typography": {
					"fontSize": "var:preset|font-size|lg",
					"fontStyle": "normal",
					"fontWeight": "800",
					"lineHeight": "var:custom|line-height|lg",
					"textTransform": "none"
				}
			},
			"core/verse": {
				"typography": {
					"fontStyle": "italic"
				}
			}
		},
		"variations": {
			"site-header": {
				"blocks": {
					"x3p0/breadcrumbs": {
						"typography": {
							"fontFamily": "var:preset|font-family|primary",
							"fontSize": "var:preset|font-size|sm",
							"lineHeight": "var:custom|line-height|sm"
						}
					}
				}
			}
		}
	}
}
